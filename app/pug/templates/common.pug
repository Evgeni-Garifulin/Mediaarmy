//- Основной файл шаблона страницы

//- Переменные для разметки страницы
block variables
	-
		let pageTitle =	'Дым Кудрявый | Hookah';

//- Разметка страницы

doctype html
html(lang='ru')

	head
		meta(charset='UTF-8')
		meta(name='robots' content='noindex, nofollow')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		meta(name='msapplication-TileColor' content='#6c525b')
		meta(name='theme-color' content='#6c525b')

		title= pageTitle


		link(rel='apple-touch-icon' sizes='180x180' href='favicon/apple-touch-icon.png')
		link(rel='icon' type='image/png' sizes='32x32' href='favicon/favicon-32x32.png')
		link(rel='icon' type='image/png' sizes='16x16' href='favicon/favicon-16x16.png')
		link(rel='manifest' href='favicon/site.webmanifest')
		link(rel='mask-icon' href='favicon/safari-pinned-tab.svg' color='#6c525b')
		link(rel='stylesheet' href='css/normalize.css')
		link(rel='stylesheet' href='css/style.css')
		link(rel='stylesheet' href='libs/swiper/swiper-bundle.css')
		link(rel='stylesheet' href='libs/lightbox/lightbox.css')

		block styles

	body

		block content

		include ./footer

		script(src='libs/lightbox/lightbox-plus-jquery.min.js')
		script(src='js/index.js')
		block scripts
